@import '../../common/stylus/mixin.styl'
.header
	position: relative
	color: #fff
	overflow: hidden
	background: rgba(7, 17, 27, 0.5)
	.content-wrapper
		position: relative
		padding: 24px 12px 18px 24px
		font-size: 0
		.avatar
			display: inline-block
			vertical-align: top
		.content
			display: inline-block
			font-size: 14px
			margin-left: 16px
			.title
				margin 2px 0 8px
				.brand
					display inline-block
					vertical-align top
					width 30px
					height 18px
					background-size 30px 18px
					background-repeat no-repeat
					bg-image("imgs/brand")
				.name
					margin-left 6px
					font-size 16px 
					line-height 18px
					font-weight 700
			.description
				margin-bottom 10px
				font-size 12px
				line-height 12px
			.support
				.icon
					display inline-block;
					width 12px
					height 12px
					vertical-align top
					margin-right 4px
					background-size 12px 12px
					background-repeat no-repeat
					&.decrease
						bg-image("imgs/decrease_1")
				.text
					font-size 12px
					line-height 12px
		.support-count
			position absolute
			right 12px
			bottom 14px
			padding 0 8px
			height 24px
			line-height 24px
			border-radius 12px
			background rgba(0, 0, 0, 0.2)
			span
				font-size 10px
				vertical-align top
				margin-left 2px
			.icon
				margin-left 2px
				line-height 24px
				font-size 10px
	.bulletin-wrapper
		font-size 10px
		background-color rgba(7, 17, 27, 0.2)
		padding 0 22px 0 12px
		height 28px
		line-height 28px
		white-space normal
		overflow hidden
		text-overflow ellipsis
		position relative
		.title
			display inline-block
			vertical-align top
			margin-top 8px
			margin-right 2px
			width 22px
			height 12px
			bg-image("imgs/bulletin")
			background-size 22px 12px
			background-repeat no-repeat
		.icon
			position absolute
			top -1px
			right 5px
			font-size 20px		
	.background
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index -1
		filter: blur(10px)
	.detail
		position fixed
		z-index 10
		top 0 
		right 0
		width 100%
		height 100%
		overflow auto
		background rgba(7, 17, 27, 0.8)
		-webkit-backdrop-filter blur(10px)
		&.fade-enter-active
			animation: bounce-in .5s;
		&.fade-leave-active
			animation: bounce-out .5s;
		@keyframes bounce-in {
			0% {
				transform: scale(0);
			}
			50% {
				transform: scale(1.5);
			}
			100% {
				transform: scale(1);
			}
		}
		@keyframes bounce-out {
			0% {
				transform: scale(1);
			}
			50% {
				transform: scale(1.5);
			}
			100% {
				transform: scale(0);
			}
		}
		
		.detail-main
			width 80%;
			margin 64px 10%
			.name
				text-align center
				font-size 16px
			.star-wrapper
				margin-top 18px
				padding 2px 0
				text-align center
				.star-item
					margin-right 22px
			.title
				display flex
				margin 28px auto 0
				text-align center
				div
					flex 1
				.line
					position relative
					top: -6px
					border-bottom 1px solid hsla(0, 0%, 100%, .2)
			.supports
				font-size 12px
				margin 22px auto
				.support-item
					padding 0 12px
					margin-bottom 12px
					&:last-child
						margin-bottom 0
					.icon
						display inline-block
						width 16px
						height 16px
						vertical-align top
						margin-right 6px
						background-size 16px 16px
						background-repeat no-repeat
						&.decrease
							bg-image('imgs/decrease_2')
						&.discount
							bg-image('imgs/discount_2')
						&.guarantee
							bg-image('imgs/guarantee_2')
						&.invoice
							bg-image('imgs/invoice_2')
						&.special
							bg-image('imgs/special_2')		
			.bulletin
				margin 22px auto
				.content
					padding 0 12px
					line-height 24px
					font-size 12px

		.close
			position absolute
			font-size 16px
			width 32px
			height 32px
			bottom 20px
			left 50%
			margin-left -16px
			line-height 32px
			text-align center